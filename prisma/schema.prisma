generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Pokemon {
  id        Int      @id @default(autoincrement())
  name      String
  sprite    String
  types     Type[]   @relation(references: [id]) // Add relation to Type model
  pokemonType PokemonType[] // Add relation field for the one-to-many relationship
  @@map(name: "Pokemon") // Specify the correct table name
}

model Type {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  pokemons  Pokemon[] // Add relation field for the many-to-many relationship
  pokemonType PokemonType[] // Add relation field for the one-to-many relationship
  @@map(name: "Type") // Specify the correct table name
}

model PokemonType {
  id        Int     @id @default(autoincrement())
  pokemon   Pokemon @relation(fields: [pokemonId], references: [id])
  pokemonId Int
  type      Type    @relation(fields: [typeId], references: [id])
  typeId    Int
  @@map(name: "PokemonType") // Specify the correct table name
}

